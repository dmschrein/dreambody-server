{
  "name": "dreambody-server",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "dreambody-server": "cdk/bin/dreambody-server.js"
  },
  "scripts": {
    "lint:schema": "graphql-schema-linter --rules recommended cdk/graphql/schema.graphql",
    "build": "tsc -p cdk/tsconfig.json",
    "watch": "tsc -w",
    "test": "vitest run cdk/lambda/function-handler/__tests__/ cdk/lambda/bedrock-flow/__tests__/ cdk/lambda/event-processor/__tests__/",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:bedrock": "vitest run cdk/lambda/bedrock-flow/__tests__/bedrock-flow-integration.test.ts",
    "test:event-processor": "vitest run cdk/lambda/event-processor/__tests__/event-processor.test.ts",
    "test:infrastructure": "vitest run cdk/lib/__tests__/",
    "cdk": "cdk",
    "verify": "npm run lint:schema && tsc --noEmit && cd cdk && tsc --noEmit",
    "preDeploy": "npm run verify && cd cdk && npm run build && npm run synth",
    "test:api": "node scripts/e2e/test-client.js"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^24.2.0",
    "aws-cdk": "2.1021.0",
    "aws-sdk-client-mock": "^4.1.0",
    "graphql-schema-linter": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-tsconfig-paths": "3.4.1"
  },
  "dependencies": {
    "@aws-cdk/aws-appsync-alpha": "^2.59.0-alpha.0",
    "@aws-lambda-powertools/logger": "^2.24.1",
    "@aws-lambda-powertools/metrics": "^2.24.1",
    "@aws-lambda-powertools/parameters": "^2.24.1",
    "@aws-lambda-powertools/tracer": "^2.24.1",
    "@aws-sdk/client-bedrock-agent-runtime": "^3.857.0",
    "@aws-sdk/client-dynamodb": "^3.848.0",
    "@aws-sdk/client-eventbridge": "^3.857.0",
    "@aws-sdk/client-ssm": "^3.859.0",
    "@aws-sdk/lib-dynamodb": "^3.850.0",
    "@middy/core": "^6.4.1",
    "aws-cdk-lib": "^2.206.0",
    "aws-sdk": "^2.1692.0",
    "constructs": "^10.4.2",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "uuid": "^11.1.0"
  }
}
